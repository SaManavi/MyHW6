<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".TaskDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title Of Task" />

        <EditText
            android:id="@+id/task_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Of Task" />


        <EditText
            android:id="@+id/task_detail_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/date_of_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date Of Task "
            android:inputType="date"
            tools:text="@tools:sample/date/mmddyy" />

        <EditText
            android:id="@+id/time_of_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time Of Task"
            android:inputType="time"
            tools:text="@tools:sample/date/hhmm" />

        <CheckBox
            android:id="@+id/task_detail_isDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IsDone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/task_detail_edit_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EDIT" />

        <Button
            android:id="@+id/task_detail_del_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DELETE" />

        <Button
            android:id="@+id/task_detail_done_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DONE" />
    </LinearLayout>

</FrameLayout>